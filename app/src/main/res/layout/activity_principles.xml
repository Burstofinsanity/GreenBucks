<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".principles">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg"
            tools:srcCompat="@mipmap/bg3"
            android:src="@mipmap/bg3"
            android:scaleType="centerCrop"
            android:contentDescription="@string/background"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/nedbank_logo"
            android:src="@mipmap/nedbank_logo"
            android:id="@+id/nedbank"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <TextView
            android:id="@+id/greenbacks"
            android:layout_width="1100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/meetlarry"
            android:fontFamily="@font/nedbanksansblack"
            android:text="Our Greenbacks Money Management Programme is founded on these principles…"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
            android:id="@+id/values"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <ImageView
                    android:id="@+id/gears"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ease_use"
                    app:srcCompat="@mipmap/ease_use" />

            <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nedbanksansblack"
                    android:text="Easy to use"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:typeface="normal"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/question"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansregular"
                    android:maxWidth="700dp"
                    android:text="By making it easy for clients to join, earn and make behavioural changes to manage their money better"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/question4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansbold"
                    android:maxWidth="700dp"
                    android:text="It’s not just a to do list...."
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <ImageView
                    android:id="@+id/loweffort"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/low_effort"
                    app:srcCompat="@mipmap/low_effort" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/people"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/more_value"
                    app:srcCompat="@mipmap/more_value" />

            <TextView
                    android:id="@+id/textView7"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nedbanksansblack"
                    android:text="More Value"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:typeface="normal"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/question2"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansregular"
                    android:maxWidth="700dp"
                    android:text="It’s not just about the reward, but about rewarding good money behaviour"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/question5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansbold"
                    android:maxWidth="700dp"
                    android:text="It’s more than just points...."
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <ImageView
                    android:id="@+id/morevalue"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/high_perceived"
                    app:srcCompat="@mipmap/high_perceived" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/plant"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/good_society"
                    app:srcCompat="@mipmap/good_society" />

            <TextView
                    android:id="@+id/textView8"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nedbanksansblack"
                    android:text="Good for society too"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    android:typeface="normal"
                    android:visibility="visible" />

            <TextView
                    android:id="@+id/question3"
                    android:layout_width="350dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansregular"
                    android:maxWidth="700dp"
                    android:text="By making it easy to make a real difference with Nedbank’s Affinities"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <TextView
                    android:id="@+id/question6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/nedbanksansbold"
                    android:maxWidth="700dp"
                    android:text="A programme with soul..."
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

            <ImageView
                    android:id="@+id/good"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/good_all"
                    app:srcCompat="@mipmap/good_all" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
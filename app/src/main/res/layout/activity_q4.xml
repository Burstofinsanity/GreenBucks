<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".q4">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg"
            tools:srcCompat="@mipmap/bg5"
            android:src="@mipmap/bg5"
            android:scaleType="centerCrop"
            android:contentDescription="@string/background"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/nedbank_logo"
            android:src="@mipmap/nedbank_logo"
            android:id="@+id/larry"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="25dp"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/textView"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nedbanksansblack"
                android:text="@string/following_question"
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="32sp"
                android:typeface="normal"
                android:visibility="visible" />

        <TextView
                android:id="@+id/question1"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/nedbanksansbold"
                android:maxWidth="700dp"
                android:text="4. Where can you find coupons, partner offers and special deals tailored for you?"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/answer1"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nedbanksansbold"
                android:maxWidth="700dp"
                android:padding="10dp"
                android:text="A. In the Bank"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/answer2"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nedbanksansbold"
                android:maxWidth="700dp"
                android:padding="10dp"
                android:text="B. The Greenbacks App"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/answer3"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nedbanksansbold"
                android:maxWidth="700dp"
                android:padding="10dp"
                android:text="C. Via email"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

        <TextView
                android:id="@+id/correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nedbanksansbold"
                android:maxWidth="700dp"
                android:text="Correct"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:visibility="invisible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>